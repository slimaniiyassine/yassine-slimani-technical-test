<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.cnexia.technicaltest.view.MainViewModel" />

        <import type="com.cnexia.technicaltest.view.adapter.FilterType" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/filterLayoutCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/filter_card_view_margin_start"
        android:layout_marginTop="@dimen/filter_card_view_margin_top"
        android:layout_marginEnd="@dimen/filter_card_view_margin_end"
        android:layout_marginBottom="@dimen/filter_card_view_margin_bottom"
        android:elevation="@dimen/filter_card_view_elevation"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardCornerRadius="@dimen/filter_card_view_corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/filterLayoutTitleTV"
                style="@style/FiltersTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/filter_title_margin"
                android:layout_marginTop="@dimen/filter_title_margin"
                android:text="@string/main_activity_filters_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/main_activity_filters_title" />

            <EditText
                android:id="@+id/filterLayoutMakeET"
                style="@style/FiltersEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/filter_edit_text_margin_top"
                android:layout_marginEnd="@dimen/filter_edit_text_margin_end"
                android:background="@drawable/rounded_edittext"
                android:filterType="@{FilterType.MAKE}"
                android:hint="@string/main_activity_filters_make_hint"
                android:padding="@dimen/filter_edit_text_margin_padding"
                android:setOnTextChangeListener="@{vm}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/filterLayoutTitleTV"
                app:layout_constraintTop_toBottomOf="@+id/filterLayoutTitleTV"
                tools:hint="@string/main_activity_filters_make_hint" />

            <EditText
                android:id="@+id/filterLayoutModelET"
                style="@style/FiltersEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/filter_edit_text_margin_top"
                android:layout_marginEnd="@dimen/filter_edit_text_margin_end"
                android:layout_marginBottom="@dimen/filter_edit_text_margin_bottom"
                android:background="@drawable/rounded_edittext"
                android:filterType="@{FilterType.MODEL}"
                android:hint="@string/main_activity_filters_model_hint"
                android:padding="@dimen/filter_edit_text_margin_padding"
                android:setOnTextChangeListener="@{vm}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/filterLayoutMakeET"
                app:layout_constraintTop_toBottomOf="@+id/filterLayoutMakeET"
                tools:hint="@string/main_activity_filters_model_hint" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>